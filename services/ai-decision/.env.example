# ==========================================
# AI Stock War - Local Development Environment
# ==========================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Secrets Manager (for local development)
# In production, these are loaded from AWS Secrets Manager
SECRET_DATABASE_CONFIG=ai-stock-war/database-config
SECRET_OPENSEARCH_CONFIG=ai-stock-war/opensearch-config

# Database Configuration - optional override for local development
#DB_HOST=localhost
#DB_PORT=5432
#DB_NAME=trading_db
#DB_USER=postgres
#DB_PASSWORD=postgres

# Redis Configuration - optional override for local development
#REDIS_HOST=localhost
#REDIS_PORT=6379
#REDIS_SSL=false

# BaiCai API - optional override for local development
#BAICAI_API_URL=https://www.baicai.chat
#BAICAI_API_KEY=sk-xxx

# OpenSearch Configuration - optional override for local development
#OPENSEARCH_ENDPOINT=https://xxx.us-east-1.aoss.amazonaws.com
#KNOWLEDGE_BASE_ID=8P3KK0KQMZ

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Application Settings
MAX_RETRIES=3
RETRY_DELAY=1  # seconds
CONNECTION_TIMEOUT=30  # seconds

# Feature Flags (optional)
ENABLE_RAG=true
ENABLE_COMPLIANCE_CHECK=true

# Development Mode
DEV_MODE=false  # Set to true for local development (skips some AWS services)